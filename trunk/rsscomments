<?php

header("Content-type: application/xml");

echo('<?xml version="1.0" encoding="iso-8859-2"?>');
echo "\n<rss version=\"2.0\" xmlns:dc=\"http://purl.org/dc/elements/1.1/\">\n\n";

define("PATH_TO_CLASSES", "administration/classes");
define("PATH_TO_CONFIG", "administration/inc");

require(PATH_TO_CLASSES. "/cls_db_mysql.php"); // dodawanie pliku konfigurujacego bibliotekê baz danych
require(PATH_TO_CONFIG. "/config.php");
require("inc/main_functions.php");
	
// warto¶æ pocz±tkowa zmiennej $start -> potrzebna przy stronnicowaniu
$start = ( isset($_GET['start']) ) ? intval($_GET['start']) : 0;

$db = new DB_SQL;
$query = "	SELECT 
				b.*, a.id, a.title 
			FROM 
				$mysql_data[db_table_comments] b 
			LEFT JOIN 
				$mysql_data[db_table] a 
			ON 
				b.comments_id = a.id 
			GROUP BY 
				date 
			DESC LIMIT 10";

$db->query($query);

echo "	
<channel>
	<title>./dev-log - comments RSS feed</title>
	<link>http://" . $_SERVER['HTTP_HOST'] . "</link>
	<description>./dev-log | about work</description>
	<language>pl</language> 
	<copyright>Copyright (c) 2004 core | £ukasz Skowroñ</copyright>
";

while($db->next_record()) {
	
	$date 			= $db->f("date");
	$title 			= $db->f("title");
	$text 			= $db->f("text");
	$author 		= $db->f("author");
	$id 			= $db->f("id");
	$c_id			= $db->f("c_id");
	$image			= $db->f("image");
	$comments_allow = $db->f("comments_allow");
	
	$c_name 		= $db->f("category_name");
	$c_id 			= $db->f("category_id");
	 
	// Przypisanie zmiennej $comments
	$comments 		= $db->f("comments");
	
	// zmiana formatu wy¶wietlania daty
	$date	= coreRssDateConvert($date);
	
	$text = strip_tags($text, '<br><a>');
	
	$text	= ereg_replace("&", " &amp; ", $text);
	$text	= ereg_replace("<br />", "&lt;br /&gt;", $text);
	
	$text	= ereg_replace("<", "&lt;", $text);
	$text	= ereg_replace(">", "&gt;", $text);
	
	$c_name	= ereg_replace("&", " and ", $c_name);

	
	echo "<item>\n";
	echo "	<pubDate>" . $date . " GMT</pubDate>\n";
	echo "	<title>" . $title . "</title>\n";
	echo "	<dc:creator>" . $author . "</dc:creator>\n";
	echo "	<link>http://" . $_SERVER['HTTP_HOST'] . "/1," . $id . ",1,item.html</link>\n";
	echo "	<description>" . $text . "</description>\n";
	echo "</item>\n\n";
}

echo "</channel>\n\n";
echo "</rss>"
?>
